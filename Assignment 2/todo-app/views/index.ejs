<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-Do List</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            width: 300px;
        }
        h2 {
            text-align: center;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 8px 0;
        }
        .completed {
            text-decoration: line-through;
            color: gray;
        }
        form {
            display: flex;
            align-items: center;
            width: 100%;
        }
        input[type="checkbox"] {
            margin-right: 10px;
        }
        input[type="text"] {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        button {
            background: #007bff;
            color: white;
            border: none;
            padding: 8px;
            border-radius: 5px;
            margin-left: 10px;
            cursor: pointer;
        }
        button:hover {
            background: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>To-Do List</h2>
        
        <!-- Task Input Form -->
        <form action="/add-task" method="POST">
            <input type="text" name="task" placeholder="New task..." required>
            <button type="submit">Add</button>
        </form>

        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <form action="/update-task" method="POST">
                        <input type="hidden" name="id" value="<%= task.id %>">
                        <input type="checkbox" name="completed" onchange="this.form.submit()" <%= task.completed ? 'checked' : '' %>>
                        <span class="<%= task.completed ? 'completed' : '' %>">
                            <%= task.task %>
                        </span>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
</body>
</html>
